from pyml.macros import pysx
from pyml.component import component, Props
from flask import render_template_string, url_for

@component
def Page(props: Props):
    children = props.children 
    return pysx!(
        "<!DOCTYPE html>", 
        html {
            head {
                meta {
                    charset: "utf-8"
                }, 
                meta {
                    name: "viewport", 
                    content: "width=device-width, initial-scale=1", 
                },  
                link {
                    href: "https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css", 
                    rel: "stylesheet", 
                    integrity: "sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC", 
                    crossorigin: "anonymous"
                }, 
                link {
                    rel: "stylesheet", 
                    href: py { url_for("static", filename="index.css") } 
                }, 
                title {
                    "Tic Tac Toe"
                }
            }, 
            body{  
                children, 
                script{
                    type: "text/javascript",  
                    src: py { url_for("static", filename="minmax.js")} 
                }
            }
        }
    )

@component
def Header(props: Props): 
    return pysx!(
        div {
            id: "header", 
            class: "row pt-4", 
            div {
                class: "col-sm-1 col-lg-4"
            }, 
            div {
                class: "col-sm-10 col-lg-4", 
                p {
                    class: "h1 mb-2", 
                    "Tic tac Toe"
                }
            }, 
            div {
                class: "col-sm-1 col-lg-4"
            } 
        }
    )

@component
def BoardCell(props: Props): 
    return pysx!(
        div {
            id: py { f"cell-{props.index}" },
            data-cell-index: py { props.index - 1 }, 
            div {
                class: "icon-wrapper", 
                i {}
            }
        }
    )


@component
def Board(props: Props): 
    return pysx!(
        div{
            id: "board-row",
            class: "row pt-5", 
            div {
                class: "col-sm-12 col-md-8 col-lg-6 mx-auto"
                div {
                    class: "board w-75 h-100", 
                    for i in range(1, 10) {
                        BoardCell{
                            index: py { i }
                        }
                    }
                }
            } 
     })


